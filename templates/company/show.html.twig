{% extends 'baseBack.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
<main class="app-content">
    <div class="row user">
<div class="col-md-12">
    <div class="tab-content">
<div class="tab-pane active" id="user-timeline">
    <div class="timeline-post">
        <div class="post-media"><img style="width:50px;height: 50px;" src="{{ asset('uploads/') ~company.logo}}">
            <div class="content">
                <h5><a href="#">{{ company.name }}</a></h5>
                <p class="text-muted"><small>Number of Flights : {{ company.vols|length }}</small></p>
            </div>
        </div>
        <div class="post-content">
            <p>{{ company.description }}</p>
        </div>

    </div>
</div>
    </div>
</div>
    </div>
    <p class="bs-component">
    <a class="btn btn-secondary"  href="{{ path('company_index') }}">Back to list</a>

    <a  class="btn btn-info" href="{{ path('company_edit', {'id': company.id}) }}">Edit</a>
        {{ include('company/_delete_form.html.twig') }}

    </p>
</main>

{% endblock %}
