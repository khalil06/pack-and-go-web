{% extends 'baseBack.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-th-list"></i> Reservation Table</h1>
                <p>Display analytical data effectively</p>
            </div>
            <ul class="app-breadcrumb breadcrumb side">
                <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active"><a href="#">Reservation Table</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div id="sampleTable_filter" class="dataTables_filter">
                                <label>Search:<input id="searchReservation" type="search" class="form-control form-control-sm" placeholder="search" aria-controls="sampleTable"></label>
                            </div>
                        </div>
                    </div>
                    <div class="tile-body">

                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Type</th>
                                <th>Class</th>
                                <th>Final_price</th>
                                <th>Client</th>

                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody id="allRes">
                            {% include 'reservation/ajax.html.twig' %}
                            </tbody>
                            <tbody id="searchReservation">

                            </tbody>
                        </table>
                        {{ knp_pagination_render(reservations) }}


                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}
