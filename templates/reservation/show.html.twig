{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}

    <main class="app-content">
        <div class="tile mb-4">
            <div class="page-header">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="mb-3 line-head" id="buttons" style="color: #1c7430">
                            Reservation Details
                        </h2>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-7">
                    <div class="bs-component">
                        <img style="width:80px;height: 80px;" src="{{ asset('uploads/') ~reservation.vol.company.logo}}">
                        <h4>{{ reservation.vol.company.name }}</h4>
                        <div>
                            <button disabled class="btn btn-primary btn-lg " type="button">Price : {{ reservation.finalPrice }} $</button>
                        </div>
                        <br>
                        <h4>Client  : {{ reservation.client.name }}</h4>

                    </div>
                </div>

                <div class="col-lg-5">
                    <p class="bs-component">
                    <h4>Departure :  </h4>{{ reservation.vol.departureDate ? reservation.vol.departureDate|date('Y-m-d H:i:s') : '' }}
                    <h4>Arrival : </h4> {{ reservation.vol.arrivalDate ? reservation.vol.arrivalDate|date('Y-m-d H:i:s') : '' }}
                    <div>
                        <h4>Class :  </h4>{{ reservation.class  }}
                    </div>
                    <div>
                        <h4>Type :  </h4>{{ reservation.type  }}
                    </div>

                    </p>
                </div>

            </div>
            <div>
                    <a class="btn btn-secondary  "  href="{{ path('reservation_index') }}">back to list</a>
            </div>
        </div>
        </div>
        </div>
        <p class="bs-component">
        <form method="post" action="{{ path('reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
            <button class="btn btn-danger ">Delete</button>

        </form>

        </p>
    </main>

{% endblock %}
