<style>
    .box{
        background: #806efa;
        box-sizing: border-box;
        overflow: hidden;
        box-shadow: 0 20px 50px rgb(23, 32, 90);
        border: 2px solid #2a3cad;
        color: #f4d7d7;
        padding: 20px;
        color: #050d10;
    }
    .box:before{
        width:100%;
        height:100%;
        background:#80CBC4;
        transition:0.5s;
        pointer-events: none;
    }
    .box:hover:before{
        left:-50%;
        transform: skewX(-5deg);
    }
    .box span{
        width: 50%;
        height: 50%;
        display: block;
        box-sizing: border-box;
    }
    .box span:before
    {
        width:100%;
        height: 2px;
        background: #50dfdb;
        animation: animate 4s linear infinite;
    }
</style>
