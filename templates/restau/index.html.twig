{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-edit"></i> Ajouter</h1>
            <p>Restaurant</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item">Forms</li>
            <li class="breadcrumb-item"><a href="#">Sample Forms</a></li>
        </ul>
    </div>
        <div class="col-md-6">
            <div class="tile">
                <div class="tile-body">
                        <form method="post" >
                            <div class="card-body">
                                <div class="form-group">
                                    {{form_row(form.typer,{'attr':{'class':'form-control'}})}}
                                    {{form_row(form.nomr,{'attr':{'class':'form-control'}})}}
                                    {{form_row(form.adressr,{'attr':{'class':'form-control'}})}}
                                    {{form_row(form.paysr,{'attr':{'class':'form-control'}})}}
                                    {{form_row(form.telr,{'attr':{'class':'form-control'}})}}
                                    {{form_row(form.imgr)}}
                                    <div class="card-footer">
                                        <button  class="btn btn-primary" type="submit"  id="add">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                </div>
            </div>
        </div>
</main>
</html>
{% endblock %}