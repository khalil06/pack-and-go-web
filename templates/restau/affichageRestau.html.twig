{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-th-list"></i>  Restaurant</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active"><a href="#">Data Table</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                        <tr><th>Nom Retaurant</th>
                            <th>Adresse</th>
                            <th>Pays</th>
                            <th>Tel</th>
                            <th>image</th>
                            <th>Type</th></tr>
                        </thead>
                        <tbody>
                        {% for Resteau in tabResteau %}
                            <tr>
                                <td>{{ Resteau.nomr }}</td>
                                <td>{{ Resteau.adressr }}</td>
                                <td>{{ Resteau.paysr }}</td>
                                <td>{{ Resteau.telr }}</td>
                                <td><img src=" {{asset(Resteau.imgr)}}" width="80" height="80">   </td>
                                <td>{{ Resteau.typer }}</td>
                                <td><a href="{{ path('supp',{'idr':Resteau.idr}) }}"  type="submit" class="btn btn-danger" id="add" >delete</a></td>
                                <td><a href="{{ path('update',{'idr':Resteau.idr}) }}" type="submit" class="btn btn-success" id="add" >update</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</main>

</html>
{% endblock %}