{% extends 'baseFront.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="zxx">

<div class="gallery" id="gallery">
    <div class="container">
        <div class="w3layouts-main">

        <h3 class="title-agile2"> Restaurant</h3>


        <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

        <label class="agile-se"></label>


            <script>
                $( ".change" ).on("click", function() {
                    if( $( "body" ).hasClass( "dark" )) {
                        $( "body" ).removeClass( "dark" );
                        $( ".change" ).text( "OFF" );
                    } else {
                        $( "body" ).addClass( "dark" );
                        $( ".change" ).text( "ON" );
                    }
                });
            </script>

            {% for Resteau in tabResteau %}
            <div class="gallery-grids carouselGallery-grid hidden-xs">
                <div class="col-md-4 gallery-grid" >
                    <h4 class="title-agile2">{{ Resteau.nomr}}</h4>


                    <div class="carouselGallery-col-1 carouselGallery-carousel"  data-likes="30" data-index="0" data-username=""

                    data-location=" {{ Resteau.nomr}}"   data-imagetext=" Adress:{{ Resteau.adressr}} <br> Type:  {{ Resteau.typer }} <br> Pays:{{ Resteau.paysr}} <br>  Tel:{{ Resteau.telr }} "
                         data-imagepath="{{ asset('uploads/' ~ Resteau.imgr) }}" data-posturl="#"  style="background-image:url(' {{asset('uploads/' ~ Resteau.imgr) }}')"  >

                        <div class="carouselGallery-item">

                            <div class="carouselGallery-item-meta">
								<span class="carouselGallery-item-meta-user">d√©tails..</span>
                            </div>
                        </div>
                    </div>
                    <iframe style="border:0; width: 100%; height: 60px;" class="img-fluid" src="https://maps.google.com/maps?q=+{{ Resteau.adressr }}+&hl=fr&z=14&amp;output=embed" frameborder="0" allowfullscreen></iframe>

                    <li><a href="{{path('reserver')}}?id={{Resteau.idr }}"  class=""><i class="mb-3 mt-3"> reserver votre restau</i></a></li>
                    <a  href="{{ path('commenter') }}?id={{Resteau.idr }}" class="nav-link active"><h5 class="mb-3 mt-3" >Voir les avis!</h5></a>                </div>
            </div>
            {% endfor %}
        </div>
    </div>

           <div class="clearfix"> </div>
            </div>
</html>
{% endblock %}
