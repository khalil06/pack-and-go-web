        <th>{% trans %}Nombre de chambres{% endtrans %}</th>
        <th> {% trans %}Adresse{% endtrans %}</th>
        <th> {% trans %}Pays{% endtrans %}</th>
        <th> {% trans %}Tel{% endtrans %}</th>
        <th>Email</th>
        <th> {% trans %}Image{% endtrans %}</th>
