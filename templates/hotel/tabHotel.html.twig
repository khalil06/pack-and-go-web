    </thead>
    <tbody>
    {% for hotel in hotels %}
        <tr>
            <td>{{ hotel.nomHotel }}</td>
            <td>{{ hotel.nbrEtoiles }}</td>
            <td>{{ hotel.nbrChambres }}</td>
            <td>{{ hotel.adresse }}</td>
            <td>{{ hotel.pays }}</td>
            <td>{{ hotel.tel }}</td>
            <td>{{ hotel.email }}</td>
            <td><img src="{{ asset('uploads/' ~ hotel.image) }}" width="180" height="100"></td>
            <td><a href="{{ path('updateHotel', {'id': hotel.idHotel}) }}" class="btn btn-success"> {% trans %}Modifier{% endtrans %}</a></td>
            <td><a href="{{ path('deleteHotel', {'id': hotel.idHotel}) }}" class="btn btn-danger"> {% trans %}Supprimer{% endtrans %}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>