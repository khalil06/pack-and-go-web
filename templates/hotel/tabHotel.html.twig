<table class="table table-hover table-bordered" id="sampleTable">
    <thead>
    <td><a href="{{ path('addHotel')}} " class="btn"> {% trans %}Ajouter un Hotel{% endtrans %}</a></td>
    <tr>
        <th> {% trans %}Nom Hotel{% endtrans %}</th>
