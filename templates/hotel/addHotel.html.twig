{% extends 'base.html.twig' %}
{% block body %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-edit"></i> AJOUTER UN HOTEL</h1>
                <p>Pack & Go</p>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item"><a href="#">Form Components</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_start(form) }}
                                <div class="form-group">
                                    <label for="nomHotel">Nom de L'hotel</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.nomHotel,{'attr':{'class:':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="nbreEtoiles">Nombre Etoiles</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.nbrEtoiles,{'attr':{'class:':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="nbrChambres">Nombre Chambres</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.nbrChambres,{'attr':{'class:':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="adresse">Adresse</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.adresse,{'attr':{'class:':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleTextarea">Pays</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.pays,{'attr':{'class:':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="tel">Telephone</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.tel,{'attr':{'class:':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="">
                                    <label class="email">Email</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.email,{'attr':{'class:':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check-label">Image</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.image,{'attr':{'class:':'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="tile-footer">
                        {{ form_widget(form) }}
                        <button class="btn btn-primary" type="submit">Ajouter</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
        </div>
    </main>
{% endblock %}