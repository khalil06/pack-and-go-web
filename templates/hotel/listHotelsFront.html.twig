{% extends 'baseFront.html.twig' %}
{% block body %}

<!-- Gallery -->

<style>
    .mode {
        float:right;
    }
    .change {
        cursor: pointer;
        border: 1px solid #555;
        border-radius: 40%;
        width: 20px;
        text-align: center;
        padding: 5px;
        margin-left: 8px;
    }
    .dark{
        background-color: #222;
        color: #e6e6e6;
    }
</style>
<section>

<div class="gallery" id="gallery">

    <div class="container">
        <div class="mode">
            Dark mode:
            <span class="change">OFF</span>
        </div>
        <h3 class="title-agile2">Meilleurs destinations meilleurs Hotels</h3>
        <label class="agile-se"></label>
        <div class="w3layouts-main">

            <div class="gallery-grids carouselGallery-grid hidden-xs">
                {% for hotel in hotels %}
                    <div class="col-md-4 gallery-grid">
                        <div class="carouselGallery-col-2 carouselGallery-carousel" data-imagetext=" {{ hotel.nomHotel ~ " situÃ© a " ~ hotel.adresse ~ " - " ~ hotel.pays }}  <br> {{ "Nombre Chambres : " ~  hotel.nbrChambres ~ ""}}  <br> {{ "Email : " ~  hotel.email ~ ""}} <br> {{ "Tel : " ~  hotel.tel ~ ""}}"
                         data-location="{{ hotel.nomHotel ~ " " ~ hotel.pays }} <br> {{ hotel.nbrEtoiles|rating ~ "" }} " data-imagepath="{{ asset('uploads/' ~ hotel.image) }}" style="background-image: url('{{ asset ('uploads/' ~ hotel.image)}}'); width: 100%; height: 100%;">
                            <div class="carouselGallery-item">
                                <div class="carouselGallery-item-meta">
                                    <span class="carouselGallery-item-meta-user" >
                                        {{  hotel.nomHotel|upper }} {{ "-" }} {{hotel.pays|upper}}
                                        <br>
                                    </span>
                                </div>
                            </div>
                        </div>
                        {{ hotel.nbrEtoiles|rating }}
                        <a href="{{ path('chambresById', {'id': hotel.idHotel}) }}" class="view" >Voir Chambres</a>
                    </div>
                {% endfor %}
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>
</section>
<!-- //Gallery -->
</body>
</html>
{% endblock %}