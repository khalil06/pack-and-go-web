{% extends 'base.html.twig' %}
{% block body %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-edit"></i> MODIFIER HOTEL</h1>
                <p>Pack & Go</p>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item"><a href="#">Form Components</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                            <div class="form-group">
                                <label for="nomHotelU">{% trans %}Nom Hotel{% endtrans %}</label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.nomHotel)}}
                                    {{ form_widget(form.nomHotel,{'attr':{'class:':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nbrEtoilesU">{% trans %}Nombre d'Ã©toiles{% endtrans %}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.nbrEtoiles,{'attr':{'class:':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nbrChambresU"{% trans %}>Nombre de chambres{% endtrans %}</label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.nbrChambres)}}
                                    {{ form_widget(form.nbrChambres,{'attr':{'class:':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="adresseU">{% trans %}Adresse{% endtrans %}</label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.adresse)}}
                                    {{ form_widget(form.adresse,{'attr':{'class:':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="paysU">{% trans %}Pays{% endtrans %}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.pays,{'attr':{'class:':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="telU">{% trans %}Telephone{% endtrans %}</label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.tel)}}
                                    {{ form_widget(form.tel,{'attr':{'class:':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="">
                                <label class="emailU">{% trans %}Email<{% endtrans %}/label>
                                <div class="col-sm-10">
                                    {{ form_errors(form.email)}}
                                    {{ form_widget(form.email,{'attr':{'class:':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <input id="vielle_image" name="vielle_image" type="hidden" value={{ image }}>
                                <label class="ImageU">{% trans %}Image{% endtrans %}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.image,{'attr':{'class:':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tile-footer">
                        {{ form_widget(form) }}
                        <button class="btn btn-primary" type="submit">{% trans %}Modifier{% endtrans %}</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        </div>
    </main>
{% endblock %}